<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Booker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:booker="clr-namespace:Booker"
    Shell.FlyoutBehavior="Disabled"
    Title="Booker">
    <ShellContent Title="Book Page" 
                  ContentTemplate="{DataTemplate booker:BookPage}"
                  Route="BookPage"/>
    <ShellContent Title="Library" 
                  ContentTemplate="{DataTemplate booker:ShelfPage}"
                  Route="ShelfPage"/>
</Shell>
